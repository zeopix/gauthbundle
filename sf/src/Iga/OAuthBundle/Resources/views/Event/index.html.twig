{% extends 'IgaOAuthBundle:Secured:index.html.twig' %}
{% block main %}
<a style="float:left;" href="{{ user.url }}"><img height="80px" src="{{ user.image }}?sz=80"></a>
<h3 style="float:left;">Bienvenido, {{ user.displayName }}</h3>
<div style="clear:both"></div>
<h1>Event list</h1>

<table class="zebra_striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Título</th>
            <th>Lugar</th>
            <th>Empieza</th>
            <th>Información</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('event_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.location }}</td>
            <td>{% if entity.start %}{{ entity.start|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.end %}{{ entity.info }}{% endif%}</td>
            <td>
                <a class="btn primary" href="{{ path('event_show', { 'id': entity.id }) }}">Más Información</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('event_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
